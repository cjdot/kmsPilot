<h2 class="page-header">User Settings</h2>
<p><b>NOTE: WORK IN PROGRESS</b></p>

<div class="col-12 col-sm-6 placeholder">
<br>

    {{#if errors}} {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
    {{/each}} {{/if}}

     <table>
        <tbody>
            {{#each results}}
            <form method="post" class="form-inline" action="/users/register">
                <tr>
                <div class="form-group mb-2">
                    <td><label for="firstName">First Name:  &nbsp  &nbsp</label></td>
                    <td><input type="text" class="form-control" value={{firstName}} name="firstName" /></td>
                    <br> <br>
                </div>
                </tr>
                <tr>
                <div class="form-group mb-2">
                    <td><label>Last Name:</label></td>
                    <td><input type="text" class="form-control" placeholder="Last Name" name="lastName"></td>
                </div>
                </tr>
                <tr>
                <div class="form-group mb-2">
                    <td><label>Email:</label></td>
                    <td><input type="email" class="form-control" placeholder="Email" name="email"></td>
                </div>
                </tr>
                <tr>
                <div class="form-group mb-2">
                    <td><label>Phone Number:</label></td>
                    <td><input type="tel" class="form-control" placeholder="(123)-456-7890" name="phoneNumber"></td>
                </div>
                </tr>
                <tr>
                
                <div class="form-group mb-2">
                    <td><label>Password:</label></td>
                    <td><input title="Password must contain at least 7 characters, include both upper and lowercase letters, and numbers. Special characters are allowed, but not required." type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{7,25}" class="form-control" placeholder="Password" name="password" onchange="form.password2.pattern = RegExp.escape(this.value);"></td>
                </div>
                </tr>
                <tr>
                <div class="form-group mb-2">
                    <td><label>Confirm Password:</label></td>
                    <td><input title="Please enter the same password as above." type="password" class="form-control" placeholder="Password" name="password2"></td>
                </div>
                </tr>
                <tr>
                <div class="form-group mb-2">
                    <td><label>Permission Level:</label></td>
                    <td><select class="form-control" name="permission">
                        <option value="read"> Read </option>
                        <option value="write"> Write </option>
                        <option value="admin"> Admin </option>
                    </select></td>                   
                </div>
                </tr>
                <tr><td>
                <button type="submit" class="btn btn-outline-info my-2 my-sm-0">Submit</button>
                </td></tr>
            </form>
            {{/each}}
        </tbody>
    </table>
</div>