{{#each results}}

<h2><strong>Project Name:</strong> {{projectName}}</h2>
<br>
<h3><strong>Client:</strong> {{clientName}}</h3>

{{/each}}

<ul class="nav nav-tabs">
    <li>
        <a data-toggle="tab" href="#home">Project Overview</a>
    </li>
    <li>
        <a data-toggle="tab" href="#menu2">Project Activities</a>
    </li>
    <li>
        <a data-toggle="tab" href="#menu3">KMS Action Items</a>
    </li>
    <li>
        <a data-toggle="tab" href="#menu4">External Action Items</a>
    </li>
    <li>
        <a data-toggle="tab" href="#menu5">Cost Summary</a>
    </li>
    <li>
        <a data-toggle="tab" href="#menu6">PCO Log</a>
    </li>
    <li>
        <a data-toggle="tab" href="#menu7">Client Report</a>
    </li>
</ul>

<div class="tab-content">

    <!-- Project Overview Tab -->
    {{#ifEquals updateType 'updateProjectOverview'}}
    <div id="home" class="tab-pane fade in active"></div>
    {{/ifEquals}} 
    {{#ifEquals updateType null}}
    <div id="home" class="tab-pane fade in active">
    {{else}}
    <div id="home" class="tab-pane fade in">
    {{/ifEquals}}
    <br>
    <h3>Project Overview</h3>
    <br>
        <div class="col-6 col-sm-3 placeholder">
            {{#each results}}
            <h2>Client Name: </h2>
            <p>{{clientName}}</p>
            <h2>Project Name: </h2>
            <p>{{projectName}}</p>
            <h2>Location: </h2>
            <p>{{location}}</p>
            <h2>Target Start Date: </h2>
            <p>{{formatDate targetStartDate}}</p>
            <h2>Target Completion Date: </h2>
            <p>{{formatDate targetCompletionDate}}</p>
            <h2>Projected Budget: </h2>
            <p>${{formatNumber projectedBudget}}</p>
            <h2>Service Type: </h2>
            <p>{{serviceType}}</p>
            {{/each}}
        </div>
    </div>
    <!-- Project Activities Tab -->
    {{#ifEquals updateType 'updateProjectActivity'}}
    <div id="menu2" class="tab-pane fade in active">
    {{else}}
    <div id="menu2" class="tab-pane fade in">
    {{/ifEquals}}
    <br>
    <h3>Project Activities</h3>      
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#read" role="tab">Read</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#update" role="tab">Update</a>
            </li>
        </ul>

    <!-- Tab panes -->
    <div class="tab-content">
    <div class="tab-pane active" id="read" role="tabpanel">
      <table class="table table-striped">
            <thead>
                <tr>
                    <th>Activity Description</th>
                    <th>Target Start Date</th>
                    <th>Actual Start Date</th>
                    <th>Target Completion Date</th>
                    <th>Actual Completion Date</th>
                    <th>Progress</th>
                    <th>Activity Notes</th>
                </tr>
            </thead>
            <tbody>
                {{#each results1}}
                <tr>
                    <td>{{activityDescription}}</td>
                    <td>{{#if targetStartDate}}{{formatDate targetStartDate}}{{/if}}</td>
                    <td>{{#if actualStartDate}}{{formatDate actualStartDate}}{{/if}}</td>
                    <td>{{#if targetCompletionDate}}{{formatDate targetCompletionDate}}{{/if}}</td>
                    <td>{{#if actualCompletionDate}}{{formatDate actualCompletionDate}}{{/if}}</td>
                    <td>{{#if progress}}{{progress}}{{else}}0%{{/if}}</td>
                    <td>{{activityNotes}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="tab-pane" id="update" role="tabpanel">
        <table class="table table-striped ">
            <thead>
                <tr>
                    <th>Activity Description</th>
                    <th>Target Start Date</th>
                    <th>Actual Start Date</th>
                    <th>Target Completion Date</th>
                    <th>Actual Completion Date</th>
                    <th>Progress</th>
                    <th>Activity Notes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each results1}}
                <form action="/projects/updateProjectActivity" method="post">
                    <tr>
                        <input type="hidden" class="form-control" id="projectActivityID" name="projectActivityID" value="{{projectActivityID}}">
                        <input type="hidden" class="form-control" id="projectID" name="projectID" value="{{projectID}}">
                            <td>
                                <input type="text" class="form-control" id="activityDescription" name="activityDescription" value="{{activityDescription}}"> 
                            </td>
                            <td>
                                <input type="date" class="form-control" id="targetStartDate" name="targetStartDate" value="{{#if targetStartDate}}{{formatTime targetStartDate "YYYY-MM-DD"}}{{/if}}">
                            </td>
                            <td>
                                <input type="date" class="form-control" id="actualStartDate" name="actualStartDate" value="{{#if actualStartDate}}{{formatTime actualStartDate "YYYY-MM-DD"}}{{/if}}"> 
                            </td>
                            <td>
                                <input type="date" class="form-control" id="targetCompletionDate" name="targetCompletionDate" value="{{#if targetCompletionDate}}{{formatTime targetCompletionDate "YYYY-MM-DD"}}{{/if}}"> </td>
                            <td>
                                <input type="date" class="form-control" id="actualCompletionDate" name="actualCompletionDate" value="{{#if actualCompletionDate}}{{formatTime actualCompletionDate "YYYY-MM-DD"}}{{/if}}"> </td>
                            <td>
                                <input type="text" class="form-control" id="progress" name="progress" placeholder="{{#if progress}}{{progress}}{{else}}0%{{/if}}"
                                        value="{{#if progress}}{{progress}}{{else}}0%{{/if}}">
                            </td>
                            <td>
                                <input type="text" class="form-control" id="activityNotes" placeholder="{{activityNotes}}"
                                        value="{{activityNotes}}"> </td>
                            <td>
                                <button type="submit" name="actionType" class="form-control" value="Update">Update</button>
                            </td>
                            <td>
                                <button type="submit" name="actionType" class="form-control" value="Delete">Delete</button>
                            </td>
                    </tr>
                </form>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>

        
    </div>

                
                
            

            <div id="menu3" class="tab-pane fade">

                <br>
                <h3>KMS Action Items</h3>
                <table class="table table-striped ">
                    <thead>
                        <tr>
                            <th>Action Item Description</th>
                            <th>Actvity Owner</th>
                            <th>Activity Start Date</th>
                            <th>Target Completion Date</th>
                            <th>Actual Completion Date</th>
                            <th>Action Item Notes</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each results2}}
                        <tr>
                            <td>{{actionItemDescription}}</td>
                            <td>{{activityOwner}}</td>
                            <td>{{formatDate activityStartDate}}</td>
                            <td>{{formatDate targetCompletionDate}}</td>
                            <td>{{formatDate actualCompletionDate}}</td>
                            <td>{{actionItemNotes}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
            <div id="menu4" class="tab-pane fade">
                <br>
                <h3>External Action Items</h3>
                <table class="table table-striped ">
                    <thead>
                        <tr>
                            <th>Action Item Description</th>
                            <th>Actvity Owner</th>
                            <th>Activity Start Date</th>
                            <th>Target Completion Date</th>
                            <th>Actual Completion Date</th>
                            <th>Action Item Notes</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each results3}}
                        <tr>
                            <td>{{actionItemDescription}}</td>
                            <td>{{activityOwner}}</td>
                            <td>{{formatDate activityStartDate}}</td>
                            <td>{{formatDate targetCompletionDate}}</td>
                            <td>{{formatDate actualCompletionDate}}</td>
                            <td>{{actionItemNotes}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <div id="menu5" class="tab-pane fade">
                <br>
                <h3>Cost Summary</h3>
                <table class="table table-striped ">
                    <thead>
                        <tr>
                            <th>Division Category</th>
                            <th>Line Item</th>
                            <th>Line Item Totals</th>
                            <th>Budget</th>
                            <th>Committed</th>
                            <th>Change Orders</th>
                            <th>Anticipated Cost</th>
                            <th>Variance</th>
                            <th>Actual Cost To Date</th>
                            <th>Dollars Remaining</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each results4}}
                        <tr>
                            <td>{{divisionCategory}}</td>
                            <td>{{lineItem}}</td>
                            <td>{{lineItemTotals}}</td>
                            <td>${{budget}}</td>
                            <td>${{committed}}</td>
                            <td>{{changeOrders}}</td>
                            <td>${{anticipatedCost}}</td>
                            <td>${{variance}}</td>
                            <td>${{dollarsRemaining}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <div id="menu6" class="tab-pane fade">
                <br>
                <h3>PCO Log</h3>
                <table class="table table-striped ">
                    <thead>
                        <tr>
                            <th>PCO Number</th>
                            <th>PCO Description</th>
                            <th>Due Date</th>
                            <th>To KMS Date</th>
                            <th>KMS Reviewed Date</th>
                            <th>Bank Approved Date</th>
                            <th>PCO Value</th>
                            <th>Contingency Amount</th>
                            <th>Cost Savings Amount</th>
                            <th>Change Orders</th>
                            <th>Status</th>
                            <th>Comments</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each results5}}
                        <tr>
                            <td>{{pcoNumber}}</td>
                            <td>{{pcoDescription}}</td>
                            <td>{{formatDate toKMSDate}}</td>
                            <td>{{formatDate kmsReviewDate}}</td>
                            <td>${{pcoValue}}</td>
                            <td>${{contingencyAmount}}</td>
                            <td>${{costSavingsAmount}}</td>
                            <td>{{changeOrders}}</td>
                            <td>{{status}}</td>
                            <td>{{comments}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <div id="menu7" class="tab-pane fade">

            </div>
        </div>
    </div>
</div>
    <script src="handlebars/dist/handlebars.min.js"></script>
    <script src="handlebars-intl/dist/handlebars-intl.min.js"></script>