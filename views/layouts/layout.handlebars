<!DOCTYPE html>
<html>

<head>
  <title>KMS Project Managment</title>
  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  
    

  <div class="container">

    {{#if user}}
    <div class="row">
  <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
    <ul class="nav nav-pills flex-column">
      
      <li class="nav-item">
        <a class="nav-link" href="/">Dashboard</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/projects/project">Projects</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Settings</a>
      </li>
    </ul>
  </nav>
  </div>
  {{/if}}
    
    <div class="header clearfix">
      <nav>
        
        <ul class="nav nav-pills pull-right">
          {{#if user}}
         
          <li role="presentation">
            <a href="/users/builder">Form Builder</a>
          </li>        
          <li role="presentation">
            <a href="/users/userss">Users</a>
          </li>
           <li role="presentation" class="active">
            <a href="/users/logout">Logout {{user}}</a>
          </li>
          
          {{else}}
          <li role="presentation" class="active">
            <a href="/users/login">Login</a>
          </li>
          <li role="presentation">
            <a href="/users/register">Register</a>
          </li>
          {{!-- Remove after testing --}}
          <li role="presentation">
            <a href="/users/builder">Form Builder</a>
          </li>  
          {{/if}}
        </ul>
      </nav>
      <img src="/images/kms.jpg" alt="KMS logo" height="80"/>
      <h3 class="text-muted">KMS Project Management</h3>
    </div>

  
    <div class="row">
    
      <div class="col-lg-12">
        {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
        {{/if}} {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}} {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}} {{{body}}}
        
      </div>



    </div>

    <footer class="footer">
      <p>&copy; 2018 Kemp Management Solutions, LLC</p>
    </footer>

  </div>
  <!-- /container -->
</body>

</html>