
<button type="button" class="btn btn-active"><a href="/projects/myProjects">My Projects</a></button>
<button type="button" class="btn btn-active"><a href="/projects/project" style="text-decoration: none;">All Projects</a></button>
<br> <br>


<form class="form-inline mt-2 mt-md-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
          <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
</form>
<br>
<section class="row text-left">
{{#each results}}

<div class="col-6 col-sm-3 placeholder">
   
          <h4>Client: {{clientName}}</h4>
          <div class="text-muted" name="{{projectID}}" value="{{projectID}}">
              <strong>Project Name:</strong> {{projectName}} <br>
              <strong>Budget:</strong> ${{formatNumber projectedBudget price="USD"}} <br>
              <strong>Service Type:</strong> {{serviceType}} <br>
              <strong>Location:</strong> {{location}} <br>
              <br>
            <form action= "/projects/project_details" method="POST">
                  <input type= "hidden" name="projectID", id="projectID" value="{{projectID}}">
                  <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Select Project</button>
            </form>
        </div>

  </div> 
            
{{/each}}
</section>

<script src="handlebars/dist/handlebars.min.js"></script>
<script src="handlebars-intl/dist/handlebars-intl.min.js"></script>